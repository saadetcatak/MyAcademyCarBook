@model List<MyAcademyCarBook.EntityLayer.Concrete.Brand>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form asp-action="GetBrandSearchByName" method="get" asp-controller="Brand">
    <div>
        <p>
            <b>Lütfen Marka Adını Giriniz:</b> <input type="text" name="p" value="@ViewData["CurrentFilter"]" class="form-control" style="border:1px solid #2222" />
            <br />
            <input type="submit" class="btn btn-danger" value="Marka Getir" />
        </p>
    </div>



</form>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marka Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandID</td>
            <td>@item.BrandName</td>
            <td>@item.Status</td>
            <td><a href="/Brand/DeleteBrand/@item.BrandID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Brand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Brand/AddBrand/" class="btn btn-primary">Yeni Marka Girişi</a>
