@model Car
@{
    ViewData["Title"] = "CarListFilter";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('/carrent-master/images/hero_1.jpg')">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="feature-car-rent-box-1">
                        <h3>Range Rover S7</h3>
                        <ul class="list-unstyled">
                            <li>
                                <span>model</span>
                                <input name="Model" class="form-control" value="@ViewBag.Model"/>
