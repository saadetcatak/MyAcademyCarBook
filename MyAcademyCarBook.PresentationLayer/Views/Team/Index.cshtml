@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>        
        <th>Görsel</th>
        <th>İsim</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px;border-radius:50%" /></td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Description</td>            
            <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger"><i class="fas fa-trash">Sil</a></td>
            <td><a href="/Team/UpdateTeam/@item.TeamID" class="btn btn-outline-success"><i class="fas fa-pen"></i>Güncelle</a></td>

        </tr>
    }

</table>
<br />
<a href="/Team/AddTeam/" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i>Yeni Takım Üyesi Girişi</a>
